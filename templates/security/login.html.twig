{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}

  <div class="container mt-6 pt-4">
    
    {% if lastAuthenticationError %}
      <div class="allert alert-danger">
        <p>{{lastAuthenticationError.messageKey | trans(lastAuthenticationError.messagedata, 'security') }}</p>
      </div>
    {% endif %}

     <form action="{{ path('login') }}" method="post">
        <div class="form-group">
          <label for="exampleInputEmail1">Email address</label>
          <input type="email"  value="{{ lastUsername }}" name="_username" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
          <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">Password</label>
          <input type="password" name="_password" class="form-control" id="exampleInputPassword1">
        </div>
        <button type="submit" class="btn btn-primary">Se connecter</button>
      </form>

  </div>
{% endblock %} 