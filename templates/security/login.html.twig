{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}

	<div class="container mt-6 pt-4">
		
		{% if lastAuthenticationError %}
			<div class="flash-message alert alert-danger" role="alert">
				<p>{{lastAuthenticationError.messageKey|trans(lastAuthenticationError.messagedata, 'security') }}</p>
			</div>
		{% endif %}

		<div class="d-flex justify-content-center align-items-center container_login_form">


			<form name="login_form" id="login_form" action="{{ path('login') }}" method="post">
				<h1>Connexion</h1>
				<div class="form-group">
					<label for="exampleInputEmail1">Adresse Email</label>
					<input type="email" placeholder="toto@exemple.com" value="{{ lastUsername }}" name="_username" class="form-control span12 " id="exampleInputEmail1" aria-describedby="emailHelp">
					<small id="emailHelp" class="form-text text-muted">Nous ne partagerons jamais votre e-mail avec quelqu'un d'autre.</small>
				</div>
				<div class="form-group">
					<label for="exampleInputPassword1">Mots de passe</label>
					<input type="password" placeholder="Entrez votre mots de passe" name="_password" class="form-control span12" id="exampleInputPassword1">
				</div>
            <input type="hidden" name="go_to" value="{{ path('dashboard') }}"/>
            <input type="hidden" name="back_to" value="{{ path('forgot_password') }}"/>
				<div class="form-group d-flex justify-content-center">
					<button type="submit" class="login_submit btn btn-info color_theme">Se connecter</button>
				</div>
			</form>
		</div>
    </div>
		{% endblock %}
